.main{
  width: 100%;
}
.main .title{
  text-align: center;
  padding: 10px;
  border-bottom: solid 2px #CCC;
}
.main .userInfo_item {
  padding: 10px;
  border-bottom: solid 1px #CCC;
}

.main .userInfo_item .name_row,
.main .userInfo_item .phone_row,
.main .userInfo_item .address_row {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: solid 1px #CCC;
}

.main .btn-area{
  left: 20%;
  position: relative;
}
.main .btn-area .changePwd{
  margin: 30rpx 0;
  width: 60%;
  color: rgb(255, 70, 70);
  background-color: rgb(240, 243, 65);
}
.main .btn-area .update{
  margin: 30rpx 0;
  width: 60%;
}