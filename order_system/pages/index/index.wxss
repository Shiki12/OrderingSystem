page {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

swiper {
  flex-grow: 1;
  height: 248rpx;
}

swiper image {
  width: 100%;
}

.content{
  display: flex;
  flex-direction: row; 
}

.nav_left{
  flex-grow: 1;
  width: 25%;
  height: 800rpx;
  background: #f5f5f5;
  text-align: center;
  border-right: 1px solid #dedede;
}
.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;
  padding: 6px 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}
.nav_left .nav_left_items.active{
  background: rgb(221, 221, 221);
}


.nav_right{
  flex-grow: 1;
  width: 75%;
  height: 800rpx;
  padding: 5px;
  background: #fff;
}
.nav_right .nav_right_items{
  display: flex;
  text-align: left;
  border-bottom: 1px solid #dedede;
}
.nav_right .nav_right_items image{
  width: 50px;
  height: 30px;
}
.nav_right .nav_right_items text{
  display: block;
  margin-top: 5px;
  font-size: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.proInfo{
 display: flex;
}
.proInfo .proText .proname{
  font-size: 17px;
}
.proInfo .proText .proprice{
  color: rgb(79, 214, 1);
  font-size: 16px;
}
.proInfo .proText .like{
  color: rgb(255, 0, 191);
  font-size: 16px;
}