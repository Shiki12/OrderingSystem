page {
  padding-bottom: var(--bottomBarHeight);
}

.page_goods_detail .imageContainer {
  /* height: 60vw; */
  height: 60%;
  position: relative;
}


.page_goods_detail .imageContainer .bgImage {
  width: 100%;
  filter: blur(5px);
  background-color: aqua;
}
.page_goods_detail .imageContainer .proImage{
  position: absolute;
  text-align: center;
  top: 0%;
  width: 100%;
}


.page_goods_detail .imageContainer .proImage .pro_image {
  width: 60%;
  background-color: rgb(9, 255, 0);
}

.page_goods_detail .goods_price {
  padding: 15px;
  font-size: 18px;
  font-weight: bold;
  color: var(--themeColor);
}

.page_goods_detail .goods_title_row {
  display: flex;
}

.page_goods_detail .goods_title_row .goods_title {
  flex: 5;
  color: #000;
  font-size: 16px;
  padding: 0 10px;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


.page_goods_detail .bottom_bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: var(--bottomBarHeight);
  background-color: #FFF;
  border-top: solid 1px #CCC;
  display: flex;
}

.page_goods_detail .bottom_bar .bar_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}

.page_goods_detail .bottom_bar .btn_cart,
.page_goods_detail .bottom_bar .btn_buy {
  flex: 2;
  color: #FFF;
  font-size: 14px;
  font-weight: bold;
}

.page_goods_detail .bottom_bar .btn_cart {
  background-color: #FFA500;
}

.page_goods_detail .bottom_bar .btn_buy {
  background-color: #EB4450;
}