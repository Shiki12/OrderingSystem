<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.dao.CustomerDao">

    <insert id="addCustomer" keyProperty="id" useGeneratedKeys="true">
        insert into customer (name, password,address,phone,status,token)
        values (#{name},#{password},#{address},#{phone},#{status},#{token})
    </insert>


    <update id="update">
        update customer
        set name = #{mame},
            password = #{password},
            address = #{address},
            phone = #{phone},
            status = #{status},
        where id = #{id};
    </update>

    <update id="updateCustmoerToken">
        update customer
        set token = #{token}
        where phone = #{phone}
    </update>
    <delete id="deleteById">
        delete
        from customer
        where id = #{id};

    </delete>


    <select id="getAll" resultType="customer">
        select * from customer;
    </select>

    <select id="getById" resultType="com.web.entity.Customer">
        select * from customer where id = #{id};
    </select>
    <select id="getByPhone" resultType="com.web.entity.Customer">
        select * from customer where phone = #{phone}
    </select>

    <select id="getCustomerByToken" resultType="com.web.entity.Customer">
        select * from customer where token = #{token}
    </select>

    <select id="isPhoneExist" resultType="String">
        select phone from customer where phone=#{phone}
    </select>

    <update id="WXupdate">
        update customer
        <set>
            name = #{name},
            phone = #{phone},
            address = #{address},
            password = #{password}
        </set>
        where id = #{id}
    </update>

</mapper>